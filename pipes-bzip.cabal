name:                pipes-bzip
version:             0.2.0.4
synopsis:            Streaming compression/decompression via pipes.
description:         Streaming compression/decompression via pipes.
homepage:            https://github.com/chemist/pipes-bzip
license:             BSD3
license-file:        LICENSE
author:              Hideyuki Tanaka, Alexey Smirnov
maintainer:          Alexey Smirnov
copyright:           (c) 2012, Hideyuki Tanaka
category:            Codec
build-type:          Simple
cabal-version:       >=1.8

data-files:          test/*.bz2
                     test/sample1.9.bz2
                     test/sample2.9.bz2
                     test/sample3.9.bz2
                     test/*.ref

source-repository head
  type:                git
  location:            git://github.com/chemist/pipes-bzip.git

library
  exposed-modules:     Pipes.BZip
  other-modules:       Pipes.BZip.Internal

  build-depends:       base == 4.*
                     , bytestring >=0.9 && <0.12
                     , mtl == 2.*
                     , pipes
                     , pipes-safe
                     , data-default
                     , bindings-DSL
  extra-libraries:    bz2

test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             test.hs
  build-depends:       base == 4.*
                     , bytestring
                     , hspec >= 1.3
                     , QuickCheck
                     , random
                     , pipes-bzip
                     , pipes-safe
                     , pipes-bytestring
                     , pipes
                     , directory
                     , MonadRandom
                     , bzlib

benchmark bench
  type:                exitcode-stdio-1.0
  hs-source-dirs:      bench
  main-is:             bench.hs
  build-depends:       base == 4.*
                     , pipes-bzip
